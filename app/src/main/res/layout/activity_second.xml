<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.example.android.listwithyoutubeeg.SecondActivity"
    android:background="@drawable/rect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Purchase with"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:layout_weight="5"
            android:gravity="center_vertical"/>
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SD Card"
            android:textStyle="bold"
            android:layout_weight="5"
            android:gravity="center"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/sdcard"
            android:layout_weight="1"/>
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Pen Drive"
            android:layout_weight="5"
            android:gravity="center"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/pendrive"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:weightSum="4"
        android:background="@drawable/rect">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Course\nName"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Price in\nINR"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Price in\n USD"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:gravity="center"
            android:paddingRight="75dp"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#def0d6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CSharp for\nProfessionals"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="15989"
                android:gravity="center"
                android:textColor="#ffcc0000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="12492"
                android:textColor="#ff000000"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="312"
                android:gravity="center"
                android:textColor="#ffcc0000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="246"
                android:textColor="#ff000000"
                android:gravity="center"/>

        </LinearLayout>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Enroll"
            android:textColor="#ffffff"
            android:background="#00f"
            android:gravity="center"/>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview11"
            android:text="275 lectures, 75 hours of content"
            android:textColor="@color/abc_primary_text_disable_only_material_light" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
